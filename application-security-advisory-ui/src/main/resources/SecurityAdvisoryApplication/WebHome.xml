require(["jquery", "xwiki-meta"], function ($, xm) {
  
  // FIXME: this needs to be finish to bind it when the modal is created, however the modal popup doesn't provide an event right now
  // so we probably need to use a mutation observer for this.
  var listenEntryAdd = function() {
    var entryNamePopup = $('#entryNamePopup');
    var entryTitle = entryNamePopup.find('input[type="text"]');
    var entryAdd = entryNamePopup.find('input[type="image"]');
    var uidManager = XWiki.Model.resolve('SecurityAdvisoryApplication.Code.AdvisoryUIDManager', XWiki.EntityType.DOCUMENT);

    var redirectToPage = function (title) {
      var queryString = "action=getuid&amp;title=" + title + "&amp;form_token=" + xm.form_token;
      var url = new XWiki.Document(uidManager).getURL('view', queryString);
      window.location.href=url;
    };
    
    entryAdd.off('click');
    entryAdd.on('click', function() {
      redirectToPage(entryTitle.val());
    });
    entryTitle.on('keydown', function (event) {
      if (event.key == "Enter") {
        event.preventDefault(); // FIXME: this does not work, the other listener is called in parallel.
        redirectToPage(entryTitle.val());
      }
    });
  };
  
  var onMutations = function (mutations) {
    for (var i = 0; i &lt; mutations.length; i++) {
      var mutation = mutations[i];

      for (var j = 0; j &lt; mutation.addedNodes.length; j++) {
        var element = mutation.addedNodes[j];
        var selector = ".xdialog-box";

        if ($(element).find(selector)) {
          listenEntryAdd();
        }
      }
    }
  };
  
  var initMutationObserver = function() {
    var observer = new MutationObserver(onMutations);
    observer.observe(document, { childList: true, subtree : true, attributes : false});
  };
  
  initMutationObserver() &amp;&amp; document.observe("xwiki:dom:loaded", initMutationObserver);
});</code>
